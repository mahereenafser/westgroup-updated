---
// Enhanced SEO.astro - Complete SEO optimization with canonical URLs and meta enhancements
export interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: string;
  keywords?: string;
  author?: string;
  canonicalURL?: string;
  noindex?: boolean;
  structuredData?: any;
  locale?: string;
  alternateLanguages?: { [key: string]: string };
  publishedTime?: string;
  modifiedTime?: string;
  section?: string;
  tags?: string[];
  robotsDirectives?: string;
}

const {
  title,
  description = "WestGroup Financial Management - Premier fee-only fiduciary financial planning services for high-net-worth individuals and families in British Columbia. Expert wealth management, tax-efficient investment strategies, and comprehensive retirement planning.",
  image = "/images/logo.png",
  type = "website",
  keywords = "fee-only financial planning, fiduciary financial advisor, wealth management British Columbia, tax-efficient investment strategies, retirement income planning, estate planning strategies, business succession planning, comprehensive financial planning, investment portfolio management, financial planning for entrepreneurs, high-net-worth financial planning",
  author = "WestGroup Financial Management Inc.",
  canonicalURL,
  noindex = false,
  structuredData,
  locale = "en_CA",
  alternateLanguages = {},
  publishedTime,
  modifiedTime,
  section,
  tags = [],
  robotsDirectives = "index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1"
} = Astro.props;

// Get current URL for canonical - ensure HTTPS and proper formatting
const currentURL = canonicalURL || new URL(Astro.url.pathname, 'https://westgroupfinancial.com').href;

// Ensure proper image URL with WebP support
const getOptimizedImageURL = (imagePath: string) => {
  if (imagePath.startsWith('http')) {
    return imagePath;
  }
  const baseURL = 'https://westgroupfinancial.com';
  // Check if WebP version exists, fallback to original
  const webpPath = imagePath.replace(/\.(jpg|jpeg|png)$/i, '.webp');
  return `${baseURL}${webpPath}`;
};

const imageURL = getOptimizedImageURL(image);
const fallbackImageURL = image.startsWith('http') ? image : `https://westgroupfinancial.com${image}`;

// Generate comprehensive meta title with branding
const metaTitle = title.includes('WestGroup') ? title : `${title} | WestGroup Financial`;

// Ensure description length is optimal (150-160 characters)
const optimizedDescription = description.length > 160 
  ? description.substring(0, 157) + '...' 
  : description;

// Current timestamp for cache busting and freshness
const currentDate = new Date().toISOString();
const lastModified = modifiedTime || currentDate;
const publishDate = publishedTime || currentDate;
---

<!-- Primary Meta Tags -->
<title>{metaTitle}</title>
<meta name="title" content={metaTitle} />
<meta name="description" content={optimizedDescription} />
<meta name="keywords" content={keywords} />
<meta name="author" content={author} />
<meta name="robots" content={noindex ? "noindex, nofollow" : robotsDirectives} />
<meta name="language" content="English" />
<meta name="revisit-after" content="7 days" />
<meta name="rating" content="General" />
<meta name="distribution" content="Global" />
<meta name="subject" content="Financial Planning and Wealth Management Services" />
<meta name="classification" content="Business" />
<meta name="category" content="Financial Services" />

<!-- Canonical URL - Critical for SEO -->
<link rel="canonical" href={currentURL} />

<!-- Alternate Language URLs -->
{Object.entries(alternateLanguages).map(([lang, url]) => (
  <link rel="alternate" hreflang={lang} href={url} />
))}

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={currentURL} />
<meta property="og:title" content={metaTitle} />
<meta property="og:description" content={optimizedDescription} />
<meta property="og:image" content={imageURL} />
<meta property="og:image:alt" content={`${title} - WestGroup Financial`} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:image:type" content="image/webp" />
<meta property="og:site_name" content="WestGroup Financial Management" />
<meta property="og:locale" content={locale} />
{section && <meta property="article:section" content={section} />}
{publishedTime && <meta property="article:published_time" content={publishedTime} />}
{modifiedTime && <meta property="article:modified_time" content={modifiedTime} />}
{tags.map(tag => <meta property="article:tag" content={tag} />)}

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image" />
