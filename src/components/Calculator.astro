---
// Calculator.astro - Fixed TypeScript and HTML issues
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const seoData = {
  title: "Free Financial Planning Calculators - Retirement, Investment & Tax Planning Tools | WestGroup Financial BC",
  description: "Professional financial planning calculators for retirement planning, investment growth projections, tax optimization, and net worth analysis. Free tools designed for high-net-worth individuals in British Columbia by certified financial planners.",
  keywords: "financial planning calculators BC, retirement planning calculator, investment growth calculator, tax optimization calculator, net worth calculator, financial planning tools Vancouver Surrey, retirement income calculator, wealth management calculators",
  canonicalURL: "https://westgroupfinancial.com/calculator/",
  image: "/images/calculator-hero.png",
  modifiedTime: new Date().toISOString(),
  section: "Financial Tools",
  tags: ["financial calculators", "retirement planning", "investment planning", "tax planning", "financial tools"],
  structuredData: {
    "@context": "https://schema.org",
    "@type": "WebApplication",
    "name": "WestGroup Financial Planning Calculators",
    "description": "Professional financial planning calculators for retirement, investment, and tax planning",
    "url": "https://westgroupfinancial.com/calculator",
    "applicationCategory": "FinanceApplication",
    "operatingSystem": "Web Browser",
    "offers": {
      "@type": "Offer",
      "price": "0",
      "priceCurrency": "CAD",
      "availability": "https://schema.org/InStock"
    },
    "provider": {
      "@type": "FinancialService",
      "name": "WestGroup Financial Management Inc.",
      "url": "https://westgroupfinancial.com"
    },
    "featureList": [
      "Retirement Planning Calculator",
      "Investment Growth Calculator", 
      "Tax Optimization Calculator",
      "Net Worth Calculator",
      "Business Valuation Calculator"
    ]
  }
};
---

<Layout 
  title={seoData.title}
  description={seoData.description}
  keywords={seoData.keywords}
  canonicalURL={seoData.canonicalURL}
  image={seoData.image}
  modifiedTime={seoData.modifiedTime}
  section={seoData.section}
  tags={seoData.tags}
  structuredData={seoData.structuredData}
>
  <Header />
  
  <main class="pt-16">
    <!-- Hero Section -->
    <section class="relative min-h-[80vh] flex items-center justify-center pt-20">
      <div class="absolute inset-0 -z-10">
        <div class="absolute top-20 left-10 w-72 h-72 bg-yellow-400/5 rounded-full blur-3xl animate-pulse"></div>
        <div class="absolute bottom-20 right-10 w-96 h-96 bg-green-400/5 rounded-full blur-3xl animate-pulse" style="animation-delay: -2s;"></div>
      </div>

      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="fade-in">
          <h1 class="text-5xl lg:text-7xl font-bold mb-6 leading-tight font-['Playfair_Display']">
            <span class="text-white">Financial Planning</span><br>
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-green-400 to-blue-500">Calculators</span>
          </h1>
          <p class="text-lg text-gray-300 mb-10">
            Use our professional calculators for retirement, investment, tax planning, and net worth analysis.
          </p>
          <!-- Add call to action or other sections -->
        </div>
      </div>
    </section>

    <!-- Additional content sections can go here -->
  </main>

  <Footer />
</Layout>
