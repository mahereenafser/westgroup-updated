---
// Header.astro - Updated with logo.webp and removed redundant text
---

<header class="fixed top-0 left-0 right-0 z-50 bg-slate-900/95 backdrop-blur-sm border-b border-slate-700/50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <div class="flex items-center">
        <a href="/" class="flex items-center">
          <img src="/images/logo.webp" alt="WestGroup Financial" class="h-12 w-auto">
        </a>
      </div>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center space-x-8">
        <a href="/" class="text-gray-300 hover:text-green-400 transition-colors">Home</a>
        <a href="/about" class="text-gray-300 hover:text-green-400 transition-colors">About</a>
        <a href="/services" class="text-gray-300 hover:text-green-400 transition-colors">Services</a>
        <a href="/blog" class="text-gray-300 hover:text-green-400 transition-colors">Blog</a>
        <a href="/testimonials" class="text-gray-300 hover:text-green-400 transition-colors">Testimonials</a>
        <a href="/contact" class="bg-gradient-to-r from-green-400 to-yellow-400 text-slate-900 px-6 py-2 rounded-lg font-semibold hover:opacity-90 transition-opacity">
          Contact Us
        </a>
      </nav>

      <!-- Mobile Menu Button -->
      <button 
        id="mobile-menu-button"
        class="md:hidden flex flex-col justify-center items-center w-8 h-8 space-y-1"
        aria-label="Toggle mobile menu"
      >
        <span class="block w-5 h-0.5 bg-white transition-transform"></span>
        <span class="block w-5 h-0.5 bg-white transition-transform"></span>
        <span class="block w-5 h-0.5 bg-white transition-transform"></span>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="md:hidden hidden bg-slate-900/95 backdrop-blur-sm border-t border-slate-700/50">
      <div class="px-2 pt-2 pb-3 space-y-1">
        <a href="/" class="block px-3 py-2 text-gray-300 hover:text-green-400 transition-colors">Home</a>
        <a href="/about" class="block px-3 py-2 text-gray-300 hover:text-green-400 transition-colors">About</a>
        <a href="/services" class="block px-3 py-2 text-gray-300 hover:text-green-400 transition-colors">Services</a>
        <a href="/blog" class="block px-3 py-2 text-gray-300 hover:text-green-400 transition-colors">Blog</a>
        <a href="/testimonials" class="block px-3 py-2 text-gray-300 hover:text-green-400 transition-colors">Testimonials</a>
        <a href="/contact" class="block px-3 py-2 bg-gradient-to-r from-green-400 to-yellow-400 text-slate-900 rounded-lg font-semibold hover:opacity-90 transition-opacity">
          Contact Us
        </a>
      </div>
    </div>
  </div>
</header>

<script is:inline>
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    let isOpen = false;

    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', function() {
        isOpen = !isOpen;
        if (isOpen) {
          mobileMenu.classList.remove('hidden');
        } else {
          mobileMenu.classList.add('hidden');
        }
      });

      // Close mobile menu when clicking outside
      document.addEventListener('click', function(event) {
        if (isOpen && !mobileMenu.contains(event.target) && !mobileMenuButton.contains(event.target)) {
          mobileMenu.classList.add('hidden');
          isOpen = false;
        }
      });
    }
  });
</script>
