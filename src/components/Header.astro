---
const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 w-full z-50 glass-effect border-b border-dark-700/50 transition-all duration-700 ease-out" id="header">
  <nav class="container-custom mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-20">
      <!-- Logo with transparent background -->
      <div class="flex items-center">
        <a href="/" class="flex items-center space-x-3 group logo-container">
          <div class="relative overflow-hidden rounded-lg transition-all duration-700 ease-out group-hover:scale-110">
            <img 
              src="/images/logo.png" 
              alt="WestGroup Financial" 
              class="h-12 w-auto transition-all duration-700 ease-out filter group-hover:brightness-110" 
              style="background: transparent; mix-blend-mode: normal;"
            />
          </div>
          <div class="hidden sm:block transition-all duration-500 ease-out group-hover:translate-x-1">
            <div class="text-xl font-bold gradient-text transition-all duration-500 ease-out">WestGroup</div>
            <div class="text-sm text-gray-400 transition-colors duration-500 ease-out group-hover:text-gray-300">Financial Management</div>
          </div>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-8">
          <a 
            href="/" 
            class={`text-sm font-medium transition-all duration-500 ease-out relative overflow-hidden group ${currentPath === '/' ? 'text-primary-400' : 'text-gray-300 hover:text-primary-400'}`}
          >
            <span class="relative z-10">Home</span>
            {currentPath === '/' && (
              <div class="absolute bottom-0 left-0 w-full h-0.5 bg-gradient-to-r from-primary-400 to-accent-400 animate-slide-in-left"></div>
            )}
            <div class="absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-primary-400 to-accent-400 transition-all duration-500 ease-out group-hover:w-full"></div>
          </a>
          
          <a 
            href="/services" 
            class={`text-sm font-medium transition-all duration-500 ease-out relative overflow-hidden group ${currentPath === '/services' ? 'text-primary-400' : 'text-gray-300 hover:text-primary-400'}`}
          >
            <span class="relative z-10">Services</span>
            {currentPath === '/services' && (
              <div class="absolute bottom-0 left-0 w-full h-0.5 bg-gradient-to-r from-primary-400 to-accent-400 animate-slide-in-left"></div>
            )}
            <div class="absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-primary-400 to-accent-400 transition-all duration-500 ease-out group-hover:w-full"></div>
          </a>
          
          <a 
            href="/calculator" 
            class={`text-sm font-medium transition-all duration-500 ease-out relative overflow-hidden group ${currentPath === '/calculator' ? 'text-primary-400' : 'text-gray-300 hover:text-primary-400'}`}
          >
            <span class="relative z-10">Calculator</span>
            {currentPath === '/calculator' && (
              <div class="absolute bottom-0 left-0 w-full h-0.5 bg-gradient-to-r from-primary-400 to-accent-400 animate-slide-in-left"></div>
            )}
            <div class="absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-primary-400 to-accent-400 transition-all duration-500 ease-out group-hover:w-full"></div>
          </a>
          
          <a 
            href="/about" 
            class="text-sm font-medium text-gray-300 hover:text-primary-400 transition-all duration-500 ease-out relative group"
          >
            <span class="relative z-10">About</span>
            <div class="absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-primary-400 to-accent-400 transition-all duration-500 ease-out group-hover:w-full"></div>
          </a>
          
          <a 
            href="/contact" 
            class="text-sm font-medium text-gray-300 hover:text-primary-400 transition-all duration-500 ease-out relative group"
          >
            <span class="relative z-10">Contact</span>
            <div class="absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-primary-400 to-accent-400 transition-all duration-500 ease-out group-hover:w-full"></div>
          </a>
        </div>
      </div>

      <!-- CTA Button with enhanced animation -->
      <div class="hidden md:block">
        <a href="/contact" class="btn-primary transition-all duration-600 ease-out hover:shadow-2xl">
          Schedule Consultation
        </a>
      </div>

      <!-- Mobile menu button with smooth animation -->
      <div class="md:hidden">
        <button 
          type="button" 
          class="mobile-menu-btn text-gray-400 hover:text-primary-400 transition-all duration-500 ease-out p-2 rounded-lg hover:bg-dark-700/50" 
          aria-controls="mobile-menu" 
          aria-expanded="false"
        >
          <span class="sr-only">Open main menu</span>
          <svg class="h-6 w-6 transition-transform duration-500 ease-out" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path class="menu-icon transition-opacity duration-300 ease-out" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            <path class="close-icon hidden transition-opacity duration-300 ease-out" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation with staggered animations -->
    <div class="md:hidden hidden transition-all duration-500 ease-out" id="mobile-menu">
      <div class="px-2 pt-2 pb-3 space-y-1 glass-effect mt-4 rounded-lg border border-dark-700/50 animate-slide-up">
        <a 
          href="/" 
          class={`block px-3 py-3 rounded-md text-base font-medium transition-all duration-500 ease-out hover:bg-dark-800/50 transform hover:translate-x-2 ${currentPath === '/' ? 'text-primary-400 bg-dark-800/50' : 'text-gray-300 hover:text-primary-400'}`}
          style="animation-delay: 0.1s"
        >
          Home
        </a>
        <a 
          href="/services" 
          class={`block px-3 py-3 rounded-md text-base font-medium transition-all duration-500 ease-out hover:bg-dark-800/50 transform hover:translate-x-2 ${currentPath === '/services' ? 'text-primary-400 bg-dark-800/50' : 'text-gray-300 hover:text-primary-400'}`}
          style="animation-delay: 0.2s"
        >
          Services
        </a>
        <a 
          href="/calculator" 
          class={`block px-3 py-3 rounded-md text-base font-medium transition-all duration-500 ease-out hover:bg-dark-800/50 transform hover:translate-x-2 ${currentPath === '/calculator' ? 'text-primary-400 bg-dark-800/50' : 'text-gray-300 hover:text-primary-400'}`}
          style="animation-delay: 0.3s"
        >
          Calculator
        </a>
        <a 
          href="/about" 
          class="block px-3 py-3 rounded-md text-base font-medium text-gray-300 hover:text-primary-400 hover:bg-dark-800/50 transition-all duration-500 ease-out transform hover:translate-x-2"
          style="animation-delay: 0.4s"
        >
          About
        </a>
        <a 
          href="/contact" 
          class="block px-3 py-3 rounded-md text-base font-medium text-gray-300 hover:text-primary-400 hover:bg-dark-800/50 transition-all duration-500 ease-out transform hover:translate-x-2"
          style="animation-delay: 0.5s"
        >
          Contact
        </a>
        <div class="pt-4" style="animation-delay: 0.6s">
          <a href="/contact" class="btn-primary w-full text-center block transition-all duration-600 ease-out">
            Schedule Consultation
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>

<script is:inline>
  // Enhanced mobile menu toggle with smooth animations
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    const menuIcon = document.querySelector('.menu-icon');
    const closeIcon = document.querySelector('.close-icon');

    if (mobileMenuBtn && mobileMenu) {
      mobileMenuBtn.addEventListener('click', function() {
        const isOpen = !mobileMenu.classList.contains('hidden');
        
        if (isOpen) {
          // Close menu
          mobileMenu.style.transform = 'translateY(-10px)';
          mobileMenu.style.opacity = '0';
          setTimeout(() => {
            mobileMenu.classList.add('hidden');
            mobileMenu.style.transform = '';
            mobileMenu.style.opacity = '';
          }, 300);
          
          menuIcon?.classList.remove('hidden');
          closeIcon?.classList.add('hidden');
        } else {
          // Open menu
          mobileMenu.classList.remove('hidden');
          mobileMenu.style.transform = 'translateY(-10px)';
          mobileMenu.style.opacity = '0';
          
          setTimeout(() => {
            mobileMenu.style.transform = 'translateY(0)';
            mobileMenu.style.opacity = '1';
          }, 10);
          
          menuIcon?.classList.add('hidden');
          closeIcon?.classList.remove('hidden');
        }
      });
    }

    // Enhanced header background on scroll with smooth transition
    const header = document.getElementById('header');
    if (header) {
      let lastScrollY = window.scrollY;
      
      window.addEventListener('scroll', function() {
        const currentScrollY = window.scrollY;
        
        if (currentScrollY > 100) {
          header.classList.add('bg-dark-900/95', 'shadow-2xl', 'border-dark-600/50');
          header.style.backdropFilter = 'blur(20px)';
        } else {
          header.classList.remove('bg-dark-900/95', 'shadow-2xl', 'border-dark-600/50');
          header.style.backdropFilter = 'blur(12px)';
        }
        
        // Add slight header movement for smooth scrolling feel
        if (Math.abs(currentScrollY - lastScrollY) > 5) {
          header.style.transform = currentScrollY > lastScrollY ? 'translateY(-2px)' : 'translateY(0px)';
        }
        
        lastScrollY = currentScrollY;
      }, { passive: true });
    }
  });
</script>
