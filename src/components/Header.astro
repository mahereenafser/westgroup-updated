---
const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 w-full z-50 glass-effect border-b border-gray-800/50 transition-all duration-400 ease-out bg-black/90 backdrop-blur-md" id="header">
  <nav class="container-custom mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-20">
      <!-- Logo - Simplified without text -->
      <div class="flex items-center">
        <a href="/" class="group logo-container">
          <div class="relative overflow-hidden rounded-lg transition-all duration-400 ease-out group-hover:scale-110">
            <img 
              src="/images/logo.png" 
              alt="WestGroup Financial" 
              class="h-12 w-auto transition-all duration-400 ease-out filter group-hover:brightness-110" 
              style="background: transparent; mix-blend-mode: normal;"
            />
          </div>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-8">
          <a 
            href="/" 
            class={`text-sm font-medium transition-all duration-300 ease-out relative overflow-hidden group ${currentPath === '/' ? 'text-primary-400' : 'text-gray-300 hover:text-primary-400'}`}
          >
            <span class="relative z-10">Home</span>
            {currentPath === '/' && (
              <div class="absolute bottom-0 left-0 w-full h-0.5 bg-gradient-to-r from-primary-400 to-accent-400"></div>
            )}
            <div class="absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-primary-400 to-accent-400 transition-all duration-300 ease-out group-hover:w-full"></div>
          </a>
          
          <a 
            href="/services" 
            class={`text-sm font-medium transition-all duration-300 ease-out relative overflow-hidden group ${currentPath === '/services' ? 'text-primary-400' : 'text-gray-300 hover:text-primary-400'}`}
          >
            <span class="relative z-10">Services</span>
            {currentPath === '/services' && (
              <div class="absolute bottom-0 left-0 w-full h-0.5 bg-gradient-to-r from-primary-400 to-accent-400"></div>
            )}
            <div class="absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-primary-400 to-accent-400 transition-all duration-300 ease-out group-hover:w-full"></div>
          </a>
          
          <a 
            href="/calculator" 
            class={`text-sm font-medium transition-all duration-300 ease-out relative overflow-hidden group ${currentPath === '/calculator' ? 'text-primary-400' : 'text-gray-300 hover:text-primary-400'}`}
          >
            <span class="relative z-10">Calculator</span>
            {currentPath === '/calculator' && (
              <div class="absolute bottom-0 left-0 w-full h-0.5 bg-gradient-to-r from-primary-400 to-accent-400"></div>
            )}
            <div class="absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-primary-400 to-accent-400 transition-all duration-300 ease-out group-hover:w-full"></div>
          </a>
          
          <a 
            href="/about" 
            class="text-sm font-medium text-gray-300 hover:text-primary-400 transition-all duration-300 ease-out relative group"
          >
            <span class="relative z-10">About</span>
            <div class="absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-primary-400 to-accent-400 transition-all duration-300 ease-out group-hover:w-full"></div>
          </a>
          
          <a 
            href="/contact" 
            class="text-sm font-medium text-gray-300 hover:text-primary-400 transition-all duration-300 ease-out relative group"
          >
            <span class="relative z-10">Contact</span>
            <div class="absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-primary-400 to-accent-400 transition-all duration-300 ease-out group-hover:w-full"></div>
          </a>
        </div>
      </div>

      <!-- CTA Button -->
      <div class="hidden md:block">
        <a href="/contact" class="btn-primary transition-all duration-400 ease-out">
          Schedule Consultation
        </a>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button 
          type="button" 
          class="mobile-menu-btn text-gray-400 hover:text-primary-400 transition-all duration-300 ease-out p-2 rounded-lg hover:bg-gray-800/50" 
          aria-controls="mobile-menu" 
          aria-expanded="false"
        >
          <span class="sr-only">Open main menu</span>
          <svg class="h-6 w-6 transition-transform duration-300 ease-out" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path class="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            <path class="close-icon hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div class="md:hidden mobile-menu hidden" id="mobile-menu">
      <div class="px-2 pt-2 pb-3 space-y-1 bg-black/95 backdrop-blur-md mt-4 rounded-lg border border-gray-800/50">
        <a 
          href="/" 
          class={`block px-3 py-3 rounded-md text-base font-medium transition-all duration-300 ease-out hover:bg-gray-800/50 ${currentPath === '/' ? 'text-primary-400 bg-gray-800/50' : 'text-gray-300 hover:text-primary-400'}`}
        >
          Home
        </a>
        <a 
          href="/services" 
          class={`block px-3 py-3 rounded-md text-base font-medium transition-all duration-300 ease-out hover:bg-gray-800/50 ${currentPath === '/services' ? 'text-primary-400 bg-gray-800/50' : 'text-gray-300 hover:text-primary-400'}`}
        >
          Services
        </a>
        <a 
          href="/calculator" 
          class={`block px-3 py-3 rounded-md text-base font-medium transition-all duration-300 ease-out hover:bg-gray-800/50 ${currentPath === '/calculator' ? 'text-primary-400 bg-gray-800/50' : 'text-gray-300 hover:text-primary-400'}`}
        >
          Calculator
        </a>
        <a 
          href="/about" 
          class="block px-3 py-3 rounded-md text-base font-medium text-gray-300 hover:text-primary-400 hover:bg-gray-800/50 transition-all duration-300 ease-out"
        >
          About
        </a>
        <a 
          href="/contact" 
          class="block px-3 py-3 rounded-md text-base font-medium text-gray-300 hover:text-primary-400 hover:bg-gray-800/50 transition-all duration-300 ease-out"
        >
          Contact
        </a>
        <div class="pt-4">
          <a href="/contact" class="btn-primary w-full text-center block transition-all duration-400 ease-out">
            Schedule Consultation
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>

<script is:inline>
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    const menuIcon = document.querySelector('.menu-icon');
    const closeIcon = document.querySelector('.close-icon');

    if (mobileMenuBtn && mobileMenu) {
      mobileMenuBtn.addEventListener('click', function() {
        console.log('Menu button clicked'); // Debug log
        
        const isOpen = !mobileMenu.classList.contains('hidden');
        
        if (isOpen) {
          // Close menu
          mobileMenu.classList.add('hidden');
          menuIcon?.classList.remove('hidden');
          closeIcon?.classList.add('hidden');
          mobileMenuBtn.setAttribute('aria-expanded', 'false');
        } else {
          // Open menu
          mobileMenu.classList.remove('hidden');
          menuIcon?.classList.add('hidden');
          closeIcon?.classList.remove('hidden');
          mobileMenuBtn.setAttribute('aria-expanded', 'true');
        }
      });
    }

    // Header scroll effect
    const header = document.getElementById('header');
    if (header) {
      window.addEventListener('scroll', function() {
        if (window.scrollY > 50) {
          header.classList.add('shadow-2xl');
        } else {
          header.classList.remove('shadow-2xl');
        }
      }, { passive: true });
    }
  });
</script>
