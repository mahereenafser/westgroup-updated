---
// Index.astro - Complete homepage file with SEO optimization and unused import fixes
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Footer from '../components/Footer.astro';
// Removed unused imports: Certifications and Testimonials to fix TypeScript warnings

const seoData = {
  title: "West Group Financial - Expert Financial Planning & Wealth Management Services",
  description: "Transform your financial future with West Group Financial's expert wealth management, retirement planning, and investment advisory services. Schedule your free consultation today.",
  keywords: "financial planning, wealth management, investment advisor, retirement planning, financial services, New York financial advisor, portfolio management, estate planning",
  canonicalURL: "https://westgroupfinancial.com/"
};
