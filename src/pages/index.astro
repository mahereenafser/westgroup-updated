---
// Index.astro - Fixed without WebP references
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Footer from '../components/Footer.astro';

const seoData = {
  title: "WestGroup Financial Management - Fee-Only Fiduciary Financial Planning | British Columbia",
  description: "Transform your financial future with WestGroup Financial's expert fee-only fiduciary financial planning services. Comprehensive wealth management, tax-efficient investment strategies, and retirement income planning for high-net-worth families in British Columbia. Schedule your free consultation today.",
  keywords: "fee-only financial planning British Columbia, fiduciary financial advisor BC, wealth management Vancouver Surrey, tax-efficient investment strategies, retirement income planning, estate planning strategies, business succession planning BC, comprehensive financial planning, investment portfolio management, financial planning for entrepreneurs, high-net-worth financial planning Surrey",
  canonicalURL: "https://westgroupfinancial.com/",
  image: "/images/logo.png",
  modifiedTime: new Date().toISOString(),
  section: "Financial Planning",
  tags: ["financial planning", "wealth management", "investment advice", "retirement planning", "British Columbia"],
  structuredData: {
    "@context": "https://schema.org",
    "@type": "LocalBusiness",
    "name": "WestGroup Financial Management Inc.",
    "description": "Premier fee-only fiduciary financial planning and wealth management services",
    "url": "https://westgroupfinancial.com"
  }
};
---

<Layout 
  title={seoData.title}
  description={seoData.description}
  keywords={seoData.keywords}
  canonicalURL={seoData.canonicalURL}
  image={seoData.image}
  modifiedTime={seoData.modifiedTime}
  section={seoData.section}
  tags={seoData.tags}
  structuredData={seoData.structuredData}
>
  <Header />
  <Hero />
  
  <!-- Services Overview Section -->
  <section class="py-16 bg-slate-800/30">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-6 text-white fade-in">
          Our Financial Services
        </h2>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto fade-in stagger-1">
          Comprehensive financial solutions designed to help you achieve your goals and secure your future.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Wealth Management -->
        <div class="bg-slate-800/50 backdrop-blur-sm border border-slate-700/50 rounded-2xl p-8 hover:border-green-400/30 transition-all duration-500 hover-lift fade-in stagger-1">
          <div class="w-16 h-16 bg-gradient-to-r from-green-400 to-yellow-400 rounded-full flex items-center justify-center mb-6">
            <svg class="w-8 h-8 text-slate-900" fill="currentColor" viewBox="0 0 20 20">
              <path d="M4 4a2 2 0 00-2 2v1h16V6a2 2 0 00-2-2H4zM18 9H2v5a2 2 0 002 2h12a2 2 0 002-2V9zM4 13a1 1 0 011-1h1a1 1 0 110 2H5a1 1 0 01-1-1zm5-1a1 1 0 100 2h1a1 1 0 100-2H9z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-4 text-white">Wealth Management</h3>
          <p class="text-gray-300 mb-6">Strategic portfolio management and asset allocation to grow and protect your wealth.</p>
          <a href="/services" class="inline-flex items-center text-green-400 hover:text-green-300 font-medium">
            Learn More
            <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a>
        </div>

        <!-- Retirement Planning -->
        <div class="bg-slate-800/50 backdrop-blur-sm border border-slate-700/50 rounded-2xl p-8 hover:border-green-400/30 transition-all duration-500 hover-lift fade-in stagger-2">
          <div class="w-16 h-16 bg-gradient-to-r from-blue-400 to-purple-400 rounded-full flex items-center justify-center mb-6">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-4 text-white">Retirement Planning</h3>
          <p class="text-gray-300 mb-6">Secure your future with personalized retirement strategies and income planning.</p>
          <a href="/services" class="inline-flex items-center text-blue-400 hover:text-blue-300 font-medium">
            Learn More
            <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a>
        </div>

        <!-- Investment Advisory -->
        <div class="bg-slate-800/50 backdrop-blur-sm border border-slate-700/50 rounded-2xl p-8 hover:border-green-400/30 transition-all duration-500 hover-lift fade-in stagger-3">
          <div class="w-16 h-16 bg-gradient-to-r from-red-400 to-orange-400 rounded-full flex items-center justify-center mb-6">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2 11a1 1 0 011-1h2a1 1 0 011 1v5a1 1 0 01-1 1H3a1 1 0 01-1-1v-5zM8 7a1 1 0 011-1h2a1 1 0 011 1v9a1 1 0 01-1 1H9a1 1 0 01-1-1V7zM14 4a1 1 0 011-1h2a1 1 0 011 1v12a1 1 0 01-1 1h-2a1 1 0 01-1-1V4z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-4 text-white">Investment Advisory</h3>
          <p class="text-gray-300 mb-6">Expert investment guidance and portfolio management for optimal returns.</p>
          <a href="/services" class="inline-flex items-center text-red-400 hover:text-red-300 font-medium">
            Learn More
            <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-gradient-to-r from-green-400/10 to-yellow-400/10">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6 text-white fade-in">
        Ready to Transform Your Financial Future?
      </h2>
      <p class="text-xl text-gray-300 mb-8 fade-in stagger-1">
        Take the first step towards financial independence. Schedule your complimentary consultation today.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center fade-in stagger-2">
        <a 
          href="/contact" 
          class="bg-gradient-to-r from-green-400 to-yellow-400 text-slate-900 font-semibold py-4 px-8 rounded-lg hover:opacity-90 transition-opacity text-lg"
        >
          Get Started Today
        </a>
        <a 
          href="tel:+16041234567" 
          class="border border-green-400 text-green-400 font-semibold py-4 px-8 rounded-lg hover:bg-green-400/10 transition-colors text-lg"
        >
          Call (604) 123-4567
        </a>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
