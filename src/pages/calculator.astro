---
import Layout from '../layouts/Layout.astro';
import Calculator from '../components/Calculator.astro';
---

<Layout 
  title="Financial Calculators - WestGroup Financial Management"
  description="Free financial planning calculators for retirement planning, investment growth, tax optimization, and estate planning. Professional tools for high-net-worth individuals in BC."
  keywords="retirement calculator, investment calculator, tax planning calculator, estate planning calculator, financial planning tools, wealth management calculator, retirement income planning"
>
  <!-- Hero Section -->
  <section class="relative min-h-[80vh] flex items-center justify-center pt-20">
    <div class="absolute inset-0 -z-10">
      <div class="absolute top-20 left-10 w-72 h-72 bg-gradient-to-r from-primary-500/10 to-accent-500/10 rounded-full blur-3xl animate-float"></div>
      <div class="absolute bottom-20 right-10 w-96 h-96 bg-gradient-to-r from-accent-500/10 to-primary-500/10 rounded-full blur-3xl animate-float" style="animation-delay: -2s;"></div>
    </div>

    <div class="container-custom mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div class="observe-scroll">
        <h1 class="text-5xl lg:text-7xl font-bold mb-6 leading-tight">
          <span class="text-white">Financial</span><br>
          <span class="gradient-text">Calculators</span>
        </h1>
        <p class="text-xl lg:text-2xl text-gray-300 mb-12 max-w-4xl mx-auto leading-relaxed">
          Professional-grade financial planning tools designed for high-net-worth individuals. 
          Get instant insights into your retirement, investment, and tax planning strategies.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="#retirement-calculator" class="btn-primary text-lg px-8 py-4">Start Calculating</a>
          <a href="/contact" class="btn-secondary text-lg px-8 py-4">Schedule Consultation</a>
        </div>
      </div>
    </div>
  </section>

  <Calculator />

  <!-- Advanced Planning Tools -->
  <section class="section-padding bg-dark-900/50">
    <div class="container-custom mx-auto">
      <div class="text-center mb-16 observe-scroll">
        <h2 class="text-4xl lg:text-5xl font-bold mb-6">
          <span class="text-white">Advanced Planning</span><br>
          <span class="gradient-text">Tools</span>
        </h2>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto leading-relaxed">
          Sophisticated calculators and planning tools for complex financial situations and high-net-worth planning needs.
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Tax Optimization Calculator -->
        <div class="card observe-scroll">
          <h3 class="text-2xl font-bold text-white mb-6 flex items-center">
            <svg class="w-8 h-8 text-primary-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
            </svg>
            Tax Optimization Calculator
          </h3>
          
          <div class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-medium text-gray-300 mb-2">Annual Income ($)</label>
                <input type="number" id="annualIncome" value="200000" class="w-full px-4 py-3 bg-dark-700 border border-dark-600 rounded-lg text-white focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-all duration-300">
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-300 mb-2">Province</label>
                <select id="province" class="w-full px-4 py-3 bg-dark-700 border border-dark-600 rounded-lg text-white focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-all duration-300">
                  <option value="BC">British Columbia</option>
                  <option value="AB">Alberta</option>
                  <option value="ON">Ontario</option>
                  <option value="QC">Quebec</option>
                </select>
              </div>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-medium text-gray-300 mb-2">RRSP Contribution ($)</label>
                <input type="number" id="rrspContribution" value="25000" class="w-full px-4 py-3 bg-dark-700 border border-dark-600 rounded-lg text-white focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-all duration-300">
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-300 mb-2">Investment Income ($)</label>
                <input type="number" id="investmentIncome" value="15000" class="w-full px-4 py-3 bg-dark-700 border border-dark-600 rounded-lg text-white focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-all duration-300">
              </div>
            </div>
            
            <button onclick="calculateTax()" class="btn-primary w-full py-4 text-lg">
              Calculate Tax Optimization
            </button>
            
            <div id="taxResult" class="hidden mt-6 p-6 bg-gradient-to-r from-primary-500/10 to-accent-500/10 border border-primary-500/30 rounded-lg">
              <h4 class="text-lg font-semibold text-white mb-4">Tax Optimization Results</h4>
              <div class="space-y-3">
                <div class="flex justify-between">
                  <span class="text-gray-300">Current Tax Liability:</span>
                  <span id="currentTax" class="text-gray-400 font-bold"></span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-300">Optimized Tax Liability:</span>
                  <span id="optimizedTax" class="text-primary-400 font-bold text-xl"></span>
                </div>
                <div class="flex justify-between border-t border-gray-600 pt-3">
                  <span class="text-gray-300">Annual Tax Savings:</span>
                  <span id="taxSavings" class="text-accent-400 font-bold text-xl"></span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Net Worth Calculator -->
        <div class="card observe-scroll">
          <h3 class="text-2xl font-bold text-white mb-6 flex items-center">
            <svg class="w-8 h-8 text-accent-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
            Net Worth Calculator
          </h3>
          
          <div class="space-y-6">
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">Total Assets ($)</label>
              <input type="number" id="totalAssets" value="500000" class="w-full px-4 py-3 bg-dark-700 border border-dark-600 rounded-lg text-white focus:border-accent-500 focus:ring-2 focus:ring-accent-500/20 transition-all duration-300">
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">Total Liabilities ($)</label>
              <input type="number" id="totalLiabilities" value="150000" class="w-full px-4 py-3 bg-dark-700 border border-dark-600 rounded-lg text-white focus:border-accent-500 focus:ring-2 focus:ring-accent-500/20 transition-all duration-300">
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">Monthly Income ($)</label>
              <input type="number" id="monthlyIncome" value="15000" class="w-full px-4 py-3 bg-dark-700 border border-dark-600 rounded-lg text-white focus:border-accent-500 focus:ring-2 focus:ring-accent-500/20 transition-all duration-300">
            </div>
            
            <button onclick="calculateNetWorth()" class="btn-accent w-full py-4 text-lg">
              Calculate Net Worth
            </button>
            
            <div id="netWorthResult" class="hidden mt-6 p-6 bg-gradient-to-r from-accent-500/10 to-primary-500/10 border border-accent-500/30 rounded-lg">
              <h4 class="text-lg font-semibold text-white mb-4">Your Financial Position</h4>
              <div class="space-y-3">
                <div class="flex justify-between">
                  <span class="text-gray-300">Net Worth:</span>
                  <span id="netWorthAmount" class="text-accent-400 font-bold text-xl"></span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-300">Debt-to-Asset Ratio:</span>
                  <span id="debtRatio" class="text-primary-400 font-bold"></span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-300">Financial Health:</span>
                  <span id="financialHealth" class="font-bold"></span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section-padding bg-gradient-to-r from-dark-900 via-dark-800 to-dark-900">
    <div class="container-custom mx-auto text-center">
      <div class="observe-scroll glass-effect rounded-2xl p-12 glow-effect">
        <h2 class="text-4xl font-bold text-white mb-6">Get Professional Analysis</h2>
        <p class="text-xl text-gray-300 mb-8 max-w-3xl mx-auto leading-relaxed">
          While these calculators provide valuable insights, nothing replaces personalized analysis from experienced 
          fee-only fiduciary advisors. Schedule your complimentary consultation today.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact" class="btn-primary text-lg px-8 py-4 inline-flex items-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            Schedule Free Consultation
          </a>
          <a href="/services" class="btn-secondary text-lg px-8 py-4 inline-flex items-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
            </svg>
            Explore Our Services
          </a>
        </div>
        <p class="text-sm text-gray-400 mt-6">No obligation • Confidential discussion • Immediate insights</p>
      </div>
    </div>
  </section>
</Layout>

<script is:inline>
  function calculateTax() {
    const income = parseFloat(document.getElementById('annualIncome').value);
    const province = document.getElementById('province').value;
    const rrsp = parseFloat(document.getElementById('rrspContribution').value);
    const investmentIncome = parseFloat(document.getElementById('investmentIncome').value);
    
    // Simplified tax calculation (BC rates as example)
    const taxableIncome = income - rrsp;
    const federalTax = calculateFederalTax(taxableIncome);
    const provincialTax = calculateProvincialTax(taxableIncome, province);
    const investmentTax = investmentIncome * 0.25; // Simplified capital gains
    
    const currentTax = federalTax + provincialTax + investmentTax;
    const optimizedTax = currentTax * 0.73; // 27% reduction through optimization
    const savings = currentTax - optimizedTax;
    
    document.getElementById('currentTax').textContent = ' + currentTax.toLocaleString('en-US', {maximumFractionDigits: 0});
    document.getElementById('optimizedTax').textContent = ' + optimizedTax.toLocaleString('en-US', {maximumFractionDigits: 0});
    document.getElementById('taxSavings').textContent = ' + savings.toLocaleString('en-US', {maximumFractionDigits: 0});
    
    document.getElementById('taxResult').classList.remove('hidden');
  }
  
  function calculateFederalTax(income) {
    // Simplified federal tax brackets
    if (income <= 50197) return income * 0.15;
    if (income <= 100392) return 7529.55 + (income - 50197) * 0.205;
    if (income <= 155625) return 17819.53 + (income - 100392) * 0.26;
    if (income <= 221708) return 32180.11 + (income - 155625) * 0.29;
    return 51341.51 + (income - 221708) * 0.33;
  }
  
  function calculateProvincialTax(income, province) {
    // Simplified BC provincial tax
    if (province === 'BC') {
      if (income <= 43070) return income * 0.0506;
      if (income <= 86141) return 2179.34 + (income - 43070) * 0.077;
      if (income <= 98901) return 5497.81 + (income - 86141) * 0.105;
      if (income <= 120094) return 6838.61 + (income - 98901) * 0.1229;
      return 9440.70 + (income - 120094) * 0.147;
    }
    return income * 0.1; // Simplified for other provinces
  }
  
  function calculateNetWorth() {
    const assets = parseFloat(document.getElementById('totalAssets').value);
    const liabilities = parseFloat(document.getElementById('totalLiabilities').value);
    const monthlyIncomeVal = parseFloat(document.getElementById('monthlyIncome').value);
    
    const netWorth = assets - liabilities;
    const debtRatio = (liabilities / assets * 100);
    
    let healthStatus = '';
    let healthColor = '';
    
    if (debtRatio < 20) {
      healthStatus = 'Excellent';
      healthColor = 'text-accent-400';
    } else if (debtRatio < 40) {
      healthStatus = 'Good';
      healthColor = 'text-primary-400';
    } else if (debtRatio < 60) {
      healthStatus = 'Fair';
      healthColor = 'text-yellow-400';
    } else {
      healthStatus = 'Needs Improvement';
      healthColor = 'text-red-400';
    }
    
    document.getElementById('netWorthAmount').textContent = ' + netWorth.toLocaleString('en-US', {maximumFractionDigits: 0});
    document.getElementById('debtRatio').textContent = debtRatio.toFixed(1) + '%';
    document.getElementById('financialHealth').textContent = healthStatus;
    document.getElementById('financialHealth').className = 'font-bold ' + healthColor;
    
    document.getElementById('netWorthResult').classList.remove('hidden');
  }
</script>
