---
// Calculator.astro - SEO Optimized Calculator Page with enhanced meta tags and WebP images
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const seoData = {
  title: "Free Financial Planning Calculators - Retirement, Investment & Tax Planning Tools | WestGroup Financial BC",
  description: "Professional financial planning calculators for retirement planning, investment growth projections, tax optimization, and net worth analysis. Free tools designed for high-net-worth individuals in British Columbia by certified financial planners.",
  keywords: "financial planning calculators BC, retirement planning calculator, investment growth calculator, tax optimization calculator, net worth calculator, financial planning tools Vancouver Surrey, retirement income calculator, wealth management calculators",
  canonicalURL: "https://westgroupfinancial.com/calculator/",
  image: "/images/calculator-hero.webp",
  publishedTime: "2024-01-01T00:00:00+00:00",
  modifiedTime: new Date().toISOString(),
  section: "Financial Tools",
  tags: ["financial calculators", "retirement planning", "investment planning", "tax planning", "financial tools"],
  structuredData: {
    "@context": "https://schema.org",
    "@type": "WebApplication",
    "name": "WestGroup Financial Planning Calculators",
    "description": "Professional financial planning calculators for retirement, investment, and tax planning",
    "url": "https://westgroupfinancial.com/calculator",
    "applicationCategory": "FinanceApplication",
    "operatingSystem": "Web Browser",
    "offers": {
      "@type": "Offer",
      "price": "0",
      "priceCurrency": "CAD",
      "availability": "https://schema.org/InStock"
    },
    "provider": {
      "@type": "FinancialService",
      "name": "WestGroup Financial Management Inc.",
      "url": "https://westgroupfinancial.com"
    },
    "featureList": [
      "Retirement Planning Calculator",
      "Investment Growth Calculator", 
      "Tax Optimization Calculator",
      "Net Worth Calculator",
      "Business Valuation Calculator"
    ]
  }
};
---

<Layout 
  title={seoData.title}
  description={seoData.description}
  keywords={seoData.keywords}
  canonicalURL={seoData.canonicalURL}
  image={seoData.image}
  publishedTime={seoData.publishedTime}
  modifiedTime={seoData.modifiedTime}
  section={seoData.section}
  tags={seoData.tags}
  structuredData={seoData.structuredData}
>
  <Header />
  
  <main class="pt-16">
    <!-- Hero Section -->
    <section class="relative min-h-[80vh] flex items-center justify-center pt-20">
      <div class="absolute inset-0 -z-10">
        <div class="absolute top-20 left-10 w-72 h-72 bg-yellow-400/5 rounded-full blur-3xl animate-pulse"></div>
        <div class="absolute bottom-20 right-10 w-96 h-96 bg-green-400/5 rounded-full blur-3xl animate-pulse" style="animation-delay: -2s;"></div>
      </div>

      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="fade-in">
          <h1 class="text-5xl lg:text-7xl font-bold mb-6 leading-tight font-['Playfair_Display']">
            <span class="text-white">Financial Planning</span><br>
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-yellow-400 to-green-400">Calculators</span>
          </h1>
          <p class="text-xl lg:text-2xl text-gray-300 mb-12 max-w-4xl mx-auto leading-relaxed">
            Professional-grade financial planning calculators designed by certified financial planners for high-net-worth individuals. Get instant insights into your retirement, investment, and tax planning strategies.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/contact" class="bg-gradient-to-r from-yellow-400 to-green-400 text-slate-900 px-8 py-4 rounded-lg font-semibold hover:shadow-lg hover:shadow-yellow-400/25 transition-all duration-300 transform hover:scale-105" aria-label="Schedule a free financial consultation">
              Schedule Free Consultation
            </a>
            <a href="/services" class="border border-yellow-400 text-yellow-400 px-8 py-4 rounded-lg font-semibold hover:bg-yellow-400 hover:text-slate-900 transition-all duration-300" aria-label="View our comprehensive financial planning services">
              View Our Services
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Calculator Section -->
    <section class="py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16 fade-in">
          <h2 class="text-4xl lg:text-5xl font-bold mb-6 font-['Playfair_Display']">
            <span class="text-white">Professional Financial</span>
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-yellow-400 to-green-400"> Planning Tools</span>
          </h2>
          <p class="text-xl text-gray-300 max-w-3xl mx-auto leading-relaxed">
            Our comprehensive suite of calculators helps you plan your financial future with the same tools used by professional financial advisors.
          </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <!-- Retirement Planning Calculator -->
          <div class="bg-slate-800/50 backdrop-blur-sm border border-slate-700/50 rounded-2xl p-8 hover:border-yellow-400/30 transition-all duration-500 hover:shadow-2xl hover:shadow-yellow-400/10 fade-in stagger-1">
            <h3 class="text-2xl font-bold text-white mb-6 flex items-center font-['Playfair_Display']">
              <picture>
                <source srcset="/images/icons/retirement-calculator.webp" type="image/webp">
                <img src="/images/icons/retirement-calculator.png" alt="Retirement Planning Calculator" class="w-8 h-8 mr-3" loading="lazy">
              </picture>
              Retirement Planning Calculator
            </h3>
            
            <div class="space-y-6">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <label class="block text-sm font-medium text-gray-300 mb-2">Annual Contribution (CAD)</label>
                  <input type="number" value="12000" class="w-full px-4 py-3 bg-slate-700 border border-slate-600 rounded-lg text-white focus:border-green-400 focus:ring-2 focus:ring-green-400/20 transition-all duration-300 focus-ring" aria-label="Enter your annual contribution amount">
                </div>
              </div>

              <div class="text-center p-6 bg-gradient-to-r from-green-400/10 to-yellow-400/10 border border-green-400/30 rounded-lg">
                <h4 class="text-lg font-semibold text-white mb-4 font-['Playfair_Display']">Sample Investment Projection</h4>
                <div class="space-y-3">
                  <div class="flex justify-between">
                    <span class="text-gray-300">Future Value:</span>
                    <span class="text-green-400 font-bold text-xl">$284,000</span>
                  </div>
                  <div class="flex justify-between">
                    <span class="text-gray-300">Total Contributions:</span>
                    <span class="text-yellow-400 font-bold">$170,000</span>
                  </div>
                  <div class="flex justify-between">
                    <span class="text-gray-300">Investment Gains:</span>
                    <span class="text-green-400 font-bold">$114,000</span>
                  </div>
                </div>
              </div>

              <div class="text-center">
                <a href="/contact" class="bg-gradient-to-r from-green-400 to-yellow-400 text-slate-900 px-6 py-3 rounded-lg font-semibold hover:shadow-lg hover:shadow-green-400/25 transition-all duration-300 transform hover:scale-105" aria-label="Get professional investment advice from our certified advisors">
                  Get Professional Investment Advice
                </a>
              </div>
            </div>
          </div>
        </div>

        <!-- Additional Calculators Grid -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-16">
          <div class="bg-slate-800/50 backdrop-blur-sm border border-slate-700/50 rounded-2xl p-8 text-center hover-lift fade-in stagger-3">
            <div class="w-16 h-16 mx-auto bg-gradient-to-r from-yellow-400 to-green-400 rounded-full flex items-center justify-center mb-4">
              <picture>
                <source srcset="/images/icons/tax-calculator.webp" type="image/webp">
                <img src="/images/icons/tax-calculator.png" alt="Tax Planning Calculator" class="w-8 h-8" loading="lazy">
              </picture>
            </div>
            <h3 class="text-xl font-semibold text-white mb-3 font-['Playfair_Display']">Tax Planning Calculator</h3>
            <p class="text-gray-400 text-sm mb-4">Calculate potential tax savings through strategic tax planning and optimization strategies for high-net-worth individuals.</p>
            <a href="/contact" class="text-yellow-400 hover:text-yellow-300 font-medium transition-colors duration-200" aria-label="Schedule consultation for tax planning">Schedule Tax Planning Consultation</a>
          </div>

          <div class="bg-slate-800/50 backdrop-blur-sm border border-slate-700/50 rounded-2xl p-8 text-center hover-lift fade-in stagger-4">
            <div class="w-16 h-16 mx-auto bg-gradient-to-r from-green-400 to-yellow-400 rounded-full flex items-center justify-center mb-4">
              <picture>
                <source srcset="/images/icons/estate-calculator.webp" type="image/webp">
                <img src="/images/icons/estate-calculator.png" alt="Estate Planning Calculator" class="w-8 h-8" loading="lazy">
              </picture>
            </div>
            <h3 class="text-xl font-semibold text-white mb-3 font-['Playfair_Display']">Estate Planning Calculator</h3>
            <p class="text-gray-400 text-sm mb-4">Estimate estate taxes and plan efficient wealth transfer strategies to preserve your legacy for future generations.</p>
            <a href="/contact" class="text-yellow-400 hover:text-yellow-300 font-medium transition-colors duration-200" aria-label="Schedule consultation for estate planning">Schedule Estate Planning Consultation</a>
          </div>

          <div class="bg-slate-800/50 backdrop-blur-sm border border-slate-700/50 rounded-2xl p-8 text-center hover-lift fade-in stagger-5">
            <div class="w-16 h-16 mx-auto bg-gradient-to-r from-yellow-400 to-green-400 rounded-full flex items-center justify-center mb-4">
              <picture>
                <source srcset="/images/icons/business-calculator.webp" type="image/webp">
                <img src="/images/icons/business-calculator.png" alt="Business Valuation Calculator" class="w-8 h-8" loading="lazy">
              </picture>
            </div>
            <h3 class="text-xl font-semibold text-white mb-3 font-['Playfair_Display']">Business Valuation Calculator</h3>
            <p class="text-gray-400 text-sm mb-4">Estimate your business value for succession planning and exit strategies with professional-grade valuation methods.</p>
            <a href="/contact" class="text-yellow-400 hover:text-yellow-300 font-medium transition-colors duration-200" aria-label="Schedule consultation for business succession planning">Schedule Business Planning Consultation</a>
          </div>
        </div>
      </div>
    </section>

    <!-- Educational Content Section -->
    <section class="py-16 bg-slate-800/30">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16 fade-in">
          <h2 class="text-3xl md:text-4xl font-bold mb-6 text-white font-['Playfair_Display']">
            Understanding Your <span class="text-transparent bg-clip-text bg-gradient-to-r from-yellow-400 to-green-400">Financial Future</span>
          </h2>
          <p class="text-xl text-gray-300 max-w-3xl mx-auto leading-relaxed">
            Our calculators provide valuable insights, but comprehensive financial planning requires personalized analysis from experienced professionals.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          <div class="text-center fade-in stagger-1">
            <div class="w-16 h-16 mx-auto bg-gradient-to-r from-green-400 to-yellow-400 rounded-full flex items-center justify-center mb-4">
              <picture>
                <source srcset="/images/icons/fiduciary.webp" type="image/webp">
                <img src="/images/icons/fiduciary.png" alt="Fiduciary Standard" class="w-8 h-8" loading="lazy">
              </picture>
            </div>
            <h3 class="text-lg font-semibold text-white mb-2">Fee-Only Fiduciary</h3>
            <p class="text-gray-400 text-sm">Always acting in your best interest with complete transparency</p>
          </div>

          <div class="text-center fade-in stagger-2">
            <div class="w-16 h-16 mx-auto bg-gradient-to-r from-blue-400 to-purple-400 rounded-full flex items-center justify-center mb-4">
              <picture>
                <source srcset="/images/icons/certified.webp" type="image/webp">
                <img src="/images/icons/certified.png" alt="Certified Professionals" class="w-8 h-8" loading="lazy">
              </picture>
            </div>
            <h3 class="text-lg font-semibold text-white mb-2">Certified Professionals</h3>
            <p class="text-gray-400 text-sm">CFP®, CFA, and other industry credentials</p>
          </div>

          <div class="text-center fade-in stagger-3">
            <div class="w-16 h-16 mx-auto bg-gradient-to-r from-red-400 to-orange-400 rounded-full flex items-center justify-center mb-4">
              <picture>
                <source srcset="/images/icons/experience.webp" type="image/webp">
                <img src="/images/icons/experience.png" alt="25+ Years Experience" class="w-8 h-8" loading="lazy">
              </picture>
            </div>
            <h3 class="text-lg font-semibold text-white mb-2">25+ Years Experience</h3>
            <p class="text-gray-400 text-sm">Proven track record serving high-net-worth families</p>
          </div>

          <div class="text-center fade-in stagger-4">
            <div class="w-16 h-16 mx-auto bg-gradient-to-r from-purple-400 to-pink-400 rounded-full flex items-center justify-center mb-4">
              <picture>
                <source srcset="/images/icons/comprehensive.webp" type="image/webp">
                <img src="/images/icons/comprehensive.png" alt="Comprehensive Planning" class="w-8 h-8" loading="lazy">
              </picture>
            </div>
            <h3 class="text-lg font-semibold text-white mb-2">Comprehensive Planning</h3>
            <p class="text-gray-400 text-sm">Holistic approach to wealth management and tax optimization</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Trust Indicators Section -->
    <section class="py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12 fade-in">
          <h2 class="text-3xl font-bold text-white mb-4 font-['Playfair_Display']">
            Why Trust <span class="text-transparent bg-clip-text bg-gradient-to-r from-yellow-400 to-green-400">WestGroup Financial?</span>
          </h2>
        </div>
        
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
          <div class="fade-in stagger-1">
            <div class="text-3xl font-bold text-yellow-400 mb-2">25+</div>
            <div class="text-sm text-gray-400">Years in Business</div>
          </div>
          <div class="fade-in stagger-2">
            <div class="text-3xl font-bold text-green-400 mb-2">BBB A+</div>
            <div class="text-sm text-gray-400">Rating</div>
          </div>
          <div class="fade-in stagger-3">
            <div class="text-3xl font-bold text-yellow-400 mb-2">$500M+</div>
            <div class="text-sm text-gray-400">Assets Under Management</div>
          </div>
          <div class="fade-in stagger-4">
            <div class="text-3xl font-bold text-green-400 mb-2">98%</div>
            <div class="text-sm text-gray-400">Client Satisfaction</div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-gradient-to-r from-green-400/10 to-yellow-400/10">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="bg-gradient-to-br from-slate-800/80 to-slate-900/80 backdrop-blur-sm border border-slate-700/50 rounded-3xl p-12 fade-in">
          <h2 class="text-4xl md:text-5xl font-bold text-white mb-6 font-['Playfair_Display']">
            Get Professional Financial Analysis
          </h2>
          <p class="text-xl text-gray-
