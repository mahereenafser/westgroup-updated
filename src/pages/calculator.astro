---
import Layout from '../layouts/Layout.astro';
import Calculator from '../components/Calculator.astro';
---

<Layout 
  title="Financial Calculators - WestGroup Financial Management"
  description="Free financial planning calculators for retirement planning, investment growth, tax optimization, and estate planning. Professional tools for high-net-worth individuals in BC."
  keywords="retirement calculator, investment calculator, tax planning calculator, estate planning calculator, financial planning tools, wealth management calculator, retirement income planning"
>
  <!-- Hero Section -->
  <section class="relative min-h-[80vh] flex items-center justify-center pt-20">
    <div class="absolute inset-0 -z-10">
      <div class="absolute top-20 left-10 w-72 h-72 bg-gradient-to-r from-primary-500/10 to-accent-500/10 rounded-full blur-3xl animate-float"></div>
      <div class="absolute bottom-20 right-10 w-96 h-96 bg-gradient-to-r from-accent-500/10 to-primary-500/10 rounded-full blur-3xl animate-float" style="animation-delay: -2s;"></div>
    </div>

    <div class="container-custom mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div class="observe-scroll">
        <h1 class="text-5xl lg:text-7xl font-bold mb-6 leading-tight">
          <span class="text-white">Financial</span><br>
          <span class="gradient-text">Calculators</span>
        </h1>
        <p class="text-xl lg:text-2xl text-gray-300 mb-12 max-w-4xl mx-auto leading-relaxed">
          Professional-grade financial planning tools designed for high-net-worth individuals. 
          Get instant insights into your retirement, investment, and tax planning strategies.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="#retirement-calculator" class="btn-primary text-lg px-8 py-4">Start Calculating</a>
          <a href="/contact" class="btn-secondary text-lg px-8 py-4">Schedule Consultation</a>
        </div>
      </div>
    </div>
  </section>

  <Calculator />

  <!-- Advanced Planning Tools -->
  <section class="section-padding bg-dark-900/50">
    <div class="container-custom mx-auto">
      <div class="text-center mb-16 observe-scroll">
        <h2 class="text-4xl lg:text-5xl font-bold mb-6">
          <span class="text-white">Advanced Planning</span><br>
          <span class="gradient-text">Tools</span>
        </h2>
