---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Financial Blog - West Group Financial">
  <Header />
  
  <main class="pt-16">
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl md:text-6xl font-bold mb-6 bg-gradient-to-r from-green-400 to-yellow-400 bg-clip-text text-transparent fade-in">
          Financial Insights Blog
        </h1>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto fade-in stagger-1">
          Stay informed with the latest financial trends, investment strategies, and market insights from our expert team.
        </p>
      </div>
    </section>

    <!-- Blog Filter -->
    <section class="py-12 bg-slate-800/50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-wrap justify-center gap-4 mb-8">
          <button class="filter-btn active bg-gradient-to-r from-green-400 to-yellow-400 text-slate-900 px-6 py-2 rounded-full font-semibold hover:opacity-90 transition-opacity" data-filter="all">
            All Posts
          </button>
          <button class="filter-btn bg-slate-700 text-white px-6 py-2 rounded-full font-semibold hover:bg-slate-600 transition-colors" data-filter="investment">
            Investment
          </button>
          <button class="filter-btn bg-slate-700 text-white px-6 py-2 rounded-full font-semibold hover:bg-slate-600 transition-colors" data-filter="retirement">
            Retirement
          </button>
          <button class="filter-btn bg-slate-700 text-white px-6 py-2 rounded-full font-semibold hover:bg-slate-600 transition-colors" data-filter="estate">
            Estate Planning
          </button>
          <button class="filter-btn bg-slate-700 text-white px-6 py-2 rounded-full font-semibold hover:bg-slate-600 transition-colors" data-filter="tax">
            Tax Planning
          </button>
        </div>
      </div>
    </section>

    <!-- Blog Posts Grid -->
    <section class="py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          
          <!-- Blog Post 1 - Fixed closing tags -->
          <article class="bg-slate-800/50 backdrop-blur-sm border border-slate-700/50 rounded-2xl overflow-hidden hover-lift fade-in stagger-1 blog-article" data-category="investment">
            <div class="h-48 bg-gradient-to-br from-green-400/20 to-yellow-400/20 flex items-center justify-center border-b border-slate-700/50">
              <div class="w-16 h-16 bg-gradient-to-r from-green-400 to-yellow-400 rounded-full flex items-center justify-center">
                <svg class="w-8 h-8 text-slate-900" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M4 4a2 2 0 00-2 2v1h16V6a2 2 0 00-2-2H4zM18 9H2v5a2 2 0 002 2h12a2 2 0 002-2V9zM4 13a1 1 0 011-1h1a1 1 0 110 2H5a1 1 0 01-1-1zm5-1a1 1 0 100 2h1a1 1 0 100-2H9z"/>
                </svg>
              </div>
            </div>
            <div class="p-6">
              <div class="flex items-center text-sm text-gray-400 mb-3">
                <span>December 15, 2024</span>
                <span class="mx-2">•</span>
                <span>5 min read</span>
              </div>
              <h3 class="text-xl font-semibold mb-3 text-white">Diversification Strategies for 2025</h3>
              <p class="text-gray-300 mb-4">Learn how to build a well-diversified portfolio that can weather market volatility and position you for long-term growth in the new year.</p>
              <a href="#" class="inline-flex items-center text-green-400 hover:text-green-300 font-medium">
                Read More
                <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </a>
            </div>
          </article>

          <!-- Blog Post 2 -->
          <article class="bg-slate-800/50 backdrop-blur-sm border border-slate-700/50 rounded-2xl overflow-hidden hover-lift fade-in stagger-2 blog-article" data-category="retirement">
            <div class="h-48 bg-gradient-to-br from-blue-400/20 to-purple-400/20 flex items-center justify-center border-b border-slate-700/50">
              <div class="w-16 h-16 bg-gradient-to-r from-blue-400 to-purple-400 rounded-full flex items-center justify-center">
                <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
                </svg>
              </div>
            </div>
            <div class="p-6">
              <div class="flex items-center text-sm text-gray-400 mb-3">
                <span>December 12, 2024</span>
                <span class="mx-2">•</span>
                <span>7 min read</span>
              </div>
              <h3 class="text-xl font-semibold mb-3 text-white">Retirement Planning in Your 40s</h3>
              <p class="text-gray-300 mb-4">It's never too late to start planning for retirement. Discover key strategies to catch up on your retirement savings and secure your financial future.</p>
              <a href="#" class="inline-flex items-center text-green-400 hover:text-green-300 font-medium">
                Read More
                <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </a>
            </div>
          </article>

          <!-- Blog Post 3 -->
          <article class="bg-slate-800/50 backdrop-blur-sm border border-slate-700/50 rounded-2xl overflow-hidden hover-lift fade-in stagger-3 blog-article" data-category="tax">
            <div class="h-48 bg-gradient-to-br from-red-400/20 to-orange-400/20 flex items-center justify-center border-b border-slate-700/50">
              <div class="w-16 h-16 bg-gradient-to-r from-red-400 to-orange-400 rounded-full flex items-center justify-center">
                <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd"/>
                </svg>
              </div>
            </div>
            <div class="p-6">
              <div class="flex items-center text-sm text-gray-400 mb-3">
                <span>December 10, 2024</span>
                <span class="mx-2">•</span>
                <span>6 min read</span>
              </div>
              <h3 class="text-xl font-semibold mb-3 text-white">Year-End Tax Planning Tips</h3>
              <p class="text-gray-300 mb-4">Make the most of your tax strategy before year-end with these proven techniques to minimize your tax liability and maximize your savings.</p>
              <a href="#" class="inline-flex items-center text-green-400 hover:text-green-300 font-medium">
                Read More
                <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </a>
            </div>
          </article>

          <!-- Blog Post 4 - Fixed closing tags -->
          <article class="bg-slate-800/50 backdrop-blur-sm border border-slate-700/50 rounded-2xl overflow-hidden hover-lift fade-in stagger-4 blog-article" data-category="estate">
            <div class="h-48 bg-gradient-to-br from-green-400/20 to-yellow-400/20 flex items-center justify-center border-b border-slate-700/50">
              <div class="w-16 h-16 bg-gradient-to-r from-green-400 to-yellow-400 rounded-full flex items-center justify-center">
                <svg class="w-8 h-8 text-slate-900" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z"/>
                  <path fill-rule="evenodd" d="M4 5a2 2 0 012-2h8a2 2 0 012 2v6h-3a1 1 0 100 2h3v3a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm5 5a1 1 0 00-1 1v1a1 1 0 002 0v-1a1 1 0 00-1-1z" clip-rule="evenodd"/>
                </svg>
              </div>
            </div>
            <div class="p-6">
              <div class="flex items-center text-sm text-gray-400 mb-3">
                <span>December 8, 2024</span>
                <span class="mx-2">•</span>
                <span>8 min read</span>
              </div>
              <h3 class="text-xl font-semibold mb-3 text-white">Estate Planning Essentials</h3>
              <p class="text-gray-300 mb-4">Protect your family's financial future with comprehensive estate planning. Learn about wills, trusts, and other essential documents.</p>
              <a href="#" class="inline-flex items-center text-green-400 hover:text-green-300 font-medium">
                Read More
                <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </a>
            </div>
          </article>

        </div>
      </div>
    </section>
  </main>

  <Footer />

  <!-- Filter functionality script - Fixed TypeScript errors -->
  <script is:inline>
    document.addEventListener('DOMContentLoaded', function() {
      const filterButtons = document.querySelectorAll('.filter-btn');
      const articles = document.querySelectorAll('.blog-article');

      filterButtons.forEach(button => {
        button.addEventListener('click', function() {
          const category = this.getAttribute('data-filter');
          
          // Update active button
          filterButtons.forEach(btn => btn.classList.remove('active', 'bg-gradient-to-r', 'from-green-400', 'to-yellow-400', 'text-slate-900'));
          filterButtons.forEach(btn => btn.classList.add('bg-slate-700', 'text-white'));
          
          this.classList.add('active', 'bg-gradient-to-r', 'from-green-400', 'to-yellow-400', 'text-slate-900');
          this.classList.remove('bg-slate-700', 'text-white');

          // Filter articles - Fixed TypeScript errors
          articles.forEach((article: Element) => {
            const element = article as HTMLElement;
            const articleCategory = element.dataset.category;
            if (category === 'all' || articleCategory === category) {
              element.style.display = 'block';
            } else {
              element.style.display = 'none';
            }
          });
        });
      });
    });
  </script>

  <!-- Schema.org structured data -->
  <script is:inline type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Blog",
      "name": "West Group Financial Blog",
      "@id": "https://westgroupfinancial.com/blog",
      "url": "https://westgroupfinancial.com/blog",
      "description": "Financial insights, investment strategies, and market analysis from West Group Financial experts",
      "publisher": {
        "@type": "Organization",
        "name": "West Group Financial",
        "logo": {
          "@type": "ImageObject",
          "url": "https://westgroupfinancial.com/images/logo.png"
        }
      }
    }
  </script>
</Layout>
