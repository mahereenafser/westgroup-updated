  <script is:inline>
    document.addEventListener('DOMContentLoaded', function() {
      const filterButtons = document.querySelectorAll('.filter-btn');
      const articles = document.querySelectorAll('.blog-article');

      filterButtons.forEach(button => {
        button.addEventListener('click', function() {
          const category = this.getAttribute('data-filter');
          
          // Update active button
          filterButtons.forEach(btn => {
            btn.classList.remove('active', 'bg-gradient-to-r', 'from-green-400', 'to-yellow-400', 'text-slate-900');
            btn.classList.add('bg-slate-700', 'text-white');
          });
          
          this.classList.add('active', 'bg-gradient-to-r', 'from-green-400', 'to-yellow-400', 'text-slate-900');
          this.classList.remove('bg-slate-700', 'text-white');

          // Filter articles - Fixed TypeScript errors
          articles.forEach(article => {
            const element = article as HTMLElement;
            const articleCategory = element.dataset.category;
            if (category === 'all' || articleCategory === category) {
              element.style.display = 'block';
            } else {
              element.style.display = 'none';
            }
          });
        });
      });
    });
  </script>

